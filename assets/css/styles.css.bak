main {
    background-color: #808000;
}

footer {
    background-color: #38353C;
    /* height: 25px; */
}

/* Target the footer */
footer p {
    font-size: 16px;
    color: #BEA180;
    padding: 20px 0;
    text-align: center;
}

img {
    max-width: 940px;
}

.image-box {
    border: 1px solid #FFFFFF;
    padding: 20px;
    float: left;
    margin-right: 20px; 
}

.image-box img {
