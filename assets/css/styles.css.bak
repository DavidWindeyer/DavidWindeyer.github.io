main {
    background-color: #808000;
}

footer {
    background-color: #38353C;
    /* height: 1.389em; */
}

/* Target the footer */
footer p {
    font-size: 0.889em;
    color: #BEA180;
    padding: 1.111em 0;
    text-align: center;
}

img {
    max-width: 92.222em;
}

.image-box {
    border: 0.056em solid #FFFFFF;
    padding: 1.111em;
    float: left;
    margin-right: 1.111em; 
}

.image-box img {
    max-height: 16.667em;
}

.image-box p {
   text-align: center; 
}
