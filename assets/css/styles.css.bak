/* import Google fonts */
@import url('https://fonts.googleapis.com/css?family=Cinzel|Merriweather|Open+Sans&display=swap');
/* Use Serif font for titles - Merriweather, and Sans-Serif for content - Open Sans. */

body {
    background-color: #96A372;
    /* Default fonts and colours for content not covered by other elements. */
    font-family: 'Open Sans', sans-serif;
    font-size: 18px;
    /* line-height: 25 px; */
    color: #FFFFFF;
}

/* Set the heading styles */
h1, h2, h3, h4, h5, h6 {
    font-family: 'Merriweather', serif;
}

/* h1 {
    font-size: 2.222em;
    /* Give some space between the header container and the h1 element */
    /*margin: 1.389em 0.833em;*/
    /* padding-left: 0.833em; *//*
    color: #BEA180;
    display: inline-block;
} */

h1 {
    font-size: 40px;
    /* Give some space between the header container and the h1 element */
    margin: 25px 15px;
    /* padding-left: 15px; */
    color: #BEA180;
    display: inline-block;
}

h2 {
    font-size: 1.389em;
    color: #FFFFFF;
    /* border: 0.056em solid #000000; */
    padding: 1.111em 0 1.111em 0;
    text-align: center;
    letter-spacing: 0.111em;
    text-transform: uppercase;
}

h3 {
    font-size: 1.111em;
    margin: 0.556em 0 1.111em 1.111em;
}

p {
    padding: 0 1.111em 1.111em 1.111em;
}

main ul, ol {
    padding: 1.111em;
}

main ul {
    list-style-type: disc;
}

main ol {
    list-style-type: decimal;
}

main li {
    margin-left: 3.333em;
}

.wrapper {
    width: 70%;
    /* margin: TOP/BOTTOM left/right */
    margin: 0 auto;
}

header {
    background-color: #38353C;
    /* Give some space from the top of the page. ****  Might not be needed ***** */
    /* margin-top:1.389em; */
    height: 4.167em;
    /* Keep the header from scrolling. */
    position: -webkit-sticky; /* Needed for Safari (iPhones etc.) */
    position: sticky;
    top: 0;
}

/* Logo */
/* header p {
    font-family: 'Cinzel', serif;
    font-size: 2.222em;
    color: #CC6600;
    display: inline-block;
    padding: 0.556em;
    border: 0.278em ridge #BEA180;
    margin: 0.556em 0;
    float: left;
} */

header p {
    font-family: 'Cinzel', serif;
    font-size: 40px;
    color: #CC6600;
    display: inline-block;
    padding: 10px;
    border: 5px ridge #BEA180;
    margin: 10px 0;
    float: left;
}

header p a, header p a:visited, header p a:hover {
    text-decoration: none;
    color: #CC6600;
}

/*nav {
    /* background-color: #8E6A41; */
    /* margin-top = header height (180) - h1 height (70) - nav height. *//*
    margin: 0.556em 0;*/
    /* position: absolute; */
    /* bottom: 1.111em; *//*
    padding: 0.833em 0;
    display: inline-block;
    float: right;
}*/

nav {
    /* background-color: #8E6A41; */
    /* margin-top = header height (180) - h1 height (70) - nav height. */
    margin: 10px 0;
    /* position: absolute; */
    /* bottom: 20px; */
    padding: 15px 0;
    display: inline-block;
    float: right;
}

/* Navigation */
nav ul {
    list-style-type: none;
    /* padding: 0.556em; */
    /* background-color: #008B8B; */
}

nav ul li {
    display: inline;
    /* background-color: #ADFF2F; */
}

nav ul li a {
    /* set dark brown as a background */
    text-decoration: none;
    padding: 0.833em 0.556em;
    color: #FFFFFF;
    background-color: #804000;
}

nav ul li a:visited {
    color: #FFFFFF;
    background-color: #804000;
}

nav ul li a:hover {
    color: #804000;
    background-color: #BEA180;
}

/* current page nav links */
nav a.current-page {
    color: #BEA180;
}

nav a.current-page:visited {
    color: #BEA180;
}

nav a.current-page:hover {
    color: #804000;
    background-color: #BEA180;
}

