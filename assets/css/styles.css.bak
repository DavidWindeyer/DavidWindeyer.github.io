/* default link styles */

a {
    color: #000000;
}

a:visited {
    color: #FF00FF;
}

a:hover {
    color: #80FF00;
}

a:active {
    color: #FF8000;
}

.column {
    width: 30%;
    background-color: #FF0000;
    float: left;
}

.column:not(:first-child):not(:last-child) {
    margin: 0 0.556em;
    background-color: #00FF00;
    display: none;
}

/* .column.middle {
    margin: 0 0.556em;
} */

.last-word {
    clear: both;
}

/* Media query for phones. */
@media screen and (max-device-width: 768px) {
    .wrapper {
        width: 98%;
    }
    
    img {
        max-width: 100%;
    }
}

