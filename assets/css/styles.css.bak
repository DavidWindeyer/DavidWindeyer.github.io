/* import Google fonts */
@import url('https://fonts.googleapis.com/css?family=Cinzel|Merriweather|Open+Sans&display=swap');
/* Use Serif font for titles - Merriweather, and Sans-Serif for content - Open Sans. */

body {
    background-color: #96A372;
    /* Default fonts and colours for content not covered by other elements. */
    font-family: 'Open Sans', sans-serif;
    font-size: 16px;
    line-height: 25px;
    color: #FFFFFF;
}

/* Set the heading styles */
h1, h2, h3, h4, h5, h6 {
    font-family: 'Merriweather', serif;
}

h1 {
    font-size: 2.5em;
    /* Give some space between the header container and the h1 element */
    /* margin: 25px 15px; */
    padding: 0.6em;
    /* padding-left: 15px; */
    color: #BEA180;
    display: inline-block;
}

h2 {
    font-size: 25px;
    color: #FFFFFF;
    /* border: 1px solid #000000; */
    padding: 20px 0 20px 0;
    text-align: center;
    letter-spacing: 2px;
    text-transform: uppercase;
}

h3 {
    font-size: 20px;
    margin: 10px 0 20px 20px;
}

p {
    padding: 0 20px 20px 20px;
}

main ul, ol {
    padding: 20px;
}

main ul {
    list-style-type: disc;
}

main ol {
    list-style-type: decimal;
}

main li {
    margin-left: 60px;
}

.wrapper {
    width: 980px;
    /* margin: TOP/BOTTOM left/right */
    margin: 0 auto;
}

header {
    background-color: #38353C;
    /* Give some space from the top of the page. ****  Might not be needed ***** */
    /* margin-top:25px; */
    height: 75px;
    /* Keep the header from scrolling. */
    position: -webkit-sticky; /* Needed for Safari (iPhones etc.) */
    position: sticky;
    top: 0;
}

/* Logo */
header p {
    font-family: 'Cinzel', serif;
    font-size: 40px;
    color: #CC6600;
    display: inline-block;
    padding: 10px;
    border: 5px ridge #BEA180;
    margin: 10px 0;
    float: left;
}

header p a, header p a:visited, header p a:hover {
    text-decoration: none;
    color: #CC6600;
}

nav {
    /* background-color: #8E6A41; */
    /* margin-top = header height (180) - h1 height (70) - nav height. */
    margin: 10px 0;
    /* position: absolute; */
    /* bottom: 20px; */
    padding: 15px 0;
    display: inline-block;
    float: right;
}

/* Navigation */
nav ul {
    list-style-type: none;
    /* padding: 10px; */
    /* background-color: #008B8B; */
}

nav ul li {
    display: inline;
    /* background-color: #ADFF2F; */
}

nav ul li a {
    /* set dark brown as a background */
    text-decoration: none;
    padding: 15px 10px;
    color: #FFFFFF;
    background-color: #804000;
}

nav ul li a:visited {
    color: #FFFFFF;
    background-color: #804000;
}

nav ul li a:hover {
    color: #804000;
    background-color: #BEA180;
}

/* current page nav links */
nav a.current-page {
    color: #BEA180;
}

nav a.current-page:visited {
    color: #BEA180;
}

nav a.current-page:hover {
    color: #804000;
    background-color: #BEA180;
}

